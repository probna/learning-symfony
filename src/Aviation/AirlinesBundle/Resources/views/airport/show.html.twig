{% extends 'base.html.twig' %}

{% block body %}
    <h1>Airport</h1>

    <table class="table table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ airport.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ airport.name }}</td>
            </tr>
            <tr>
                <th>Location</th>
                <td>{{ airport.location }}</td>
            </tr><tr>
                <th>Country</th>
                <td>{{ airport.country }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('airport_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('airport_edit', { 'id': airport.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
